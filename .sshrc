#!/usr/bin/env sh

export VIMINIT="let \$MYVIMRC='$SSHHOME/.sshrc.d/.vim/.vimrc' | source \$MYVIMRC"

if [[ $SHELL == /bin/bash ]]; then
    export PS1="\[\033[01;33m\]\u \[\033[37m\]at \[\033[32m\]`hostname -I | awk '{print $1}'` \[\033[37m\]in \[\033[36m\]\w \n\[\e[0;32m\]$\[\033[37m\] "
    export PS2="\[\033[33m\]$\[\033[37m\] "
    export PROMPT_COMMAND="echo"
fi

# vim: ft=sh

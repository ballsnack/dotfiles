alias s='sudo'
alias please='s $(history -p \!\!)'
alias pls='please'

alias pac='s apt-get'
alias pacsearch='apt-cache search'
alias addrepo='s add-apt-repository'
alias remrepo='s add-apt-repository --remove'

alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

alias ls='ls --color=auto'
alias la='ls -A'
alias ll='ls -l'
alias l='ls -cF'

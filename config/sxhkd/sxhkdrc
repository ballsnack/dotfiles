# terminal
super + Return
    kitty

alt + super + s
    screenshot

alt + {1,2,3,4,5}
    bspc desktop -f {1,2,3,4,5}

alt + Tab
    rofi -show window

super + alt + equal
    roficalc

# program launcher
super + space
    rofi -show drun

# reload sxhkd
super + Escape
    pkill -USR1 -x sxhkd

# quit bspwm
super + alt + Escape
    bspc quit

# close and kill
super + {_, shift + }w
    bspc node -{c,k}

# preselect
super + alt + {h,j,k,l}
    bspc node -p {west,south,north,east}

# clear preselections
super + alt + space
    bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#super + alt + {n,m}
#bspc node -g {locked, sticky}

# tiled and monocle
super + m
    bspc desktop -l next

# swap current and biggest
super + g
    bspc node -s biggest.local

# window state
super + {s,t,d,f}
    bspc node -t {floating,tiled,pseudo_tiled,fullscreen}

# change desktop
super + bracket{left,right}
    bspc desktop -f {prev,next}

# change window focus
super + {h,j,k,l}
    bspc node -f {west,south,north,east}

# focus next node in current desktop
super + {_,alt+}c
    bspc node -f {next,prev}.local

# move a window to workspace n
super + alt + {1-5}
    bspc node -d {1-5}

super + b
    bspc node -n prev.local

super + {minus, equal, 0}
    bspc node -l {below, normal, above}

super + i
    bspc node -f last.below.local && bspc node -l normal

alt + F1
    brightness down

alt + F2
    brightness up

F10
    volume down

F11
    volume up

Home
    mpc -p 6601 -q toggle

Prior
    mpc -p 6601 -q stop

Next
    mpc -p 6601 -q prev

End
    mpc -p 6601 -q next

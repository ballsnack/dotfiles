# terminal
super + Return
    termite

# program launcher
super + space
    rofi -show run

# reload sxhkd
super + Escape
    pkill -USR1 -x sxhkd

# quit bspwm
super + alt + Escape
    bspc quit

# close and kill
super + {_, shift + }w
    bspc node -{c,k}

# tiled and monocle
super + m
    bspc desktop -l next

# swap current and biggest
super + g
    bspc node -s biggest.local

# window state
super + {s,t,d,f}
    bspc node -t {floating,tiled,pseudo_tiled,fullscreen}

# change desktop
super + bracket{left,right}
    bspc desktop -f {prev,next}

# change window focus
super + {h,j,k,l}
    bspc node -f {west,south,north,east}

# focus next node in current desktop
super + {_,shift +}c
    bspc node -f {next,prev}.local

# move a window to workspace n
super + shift + {1-5}
    bspc node -d {1-5}

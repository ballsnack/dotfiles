#!/bin/sh

sxhkd &

bspc monitor -d 1 2 3 4 5

bspc config top_padding             32
bspc config top_monocle_padding     2
bspc config border_width            4
bspc config window_gap              5
bspc config split_ratio             0.52
bspc config borderless_monocle      true
bspc config gapless_monocle         true
bspc config focus_follows_pointer   true
bspc config click_to_focus          true
bspc config single_monocle          true
bspc config focused_border_color    "#7CAFC2"
bspc config normal_border_color     "#383838"

bspc rule -a Firefox desktop="^2" follow=on
bspc rule -a Thunar state=floating
bspc rule -a Termite state=floating
bspc rule -a Deluge state=floating
bspc rule -a Gimp state=tiled desktop="^4" follow=on
bspc rule -a XTerm state=floating
bspc rule -a Gpa state=floating
bspc rule -a Pinentry state=floating
bspc rule -a Soffice state=tiled
bspc rule -a Matplotlib state=floating
bspc rule -a feh state=floating rectangle=1200x900+320+100
bspc rule -a realvnc-vncviewer state=floating desktop="^5" follow=on
bspc rule -a Wicd-client.py state=floating
bspc rule -a Woeusbgui state=floating

feh --bg-fill $HOME/Pictures/Lunar\ Eclipse.jpg
$HOME/.config/polybar/launch.sh

redshift -l 28:-80 -t 5500:2800 &
compton &

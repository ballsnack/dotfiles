swap() {
    local TMPFILE=tmp.$$
    mv "$1" $TMPFILE
    mv "$2" "$1"
    mv $TMPFILE "$2"
}

mcd() { mkdir "$1" && cd "$1"; }

javar() { javac "$1" && java $(basename "$1" .java); }

cl() { cd "$1" && ls; }
wl() { wd "$1" && ls; }

psg() { ps -e | grep "$1"; }

x() {
    if [ -z ${1} ]; then
        echo "usage: x file.xxx"
        return
    fi

    if [ -f $1 ]; then
        case $1 in
            *.tar.bz2)  tar zjf $1  ;;
            *.tar.gz)   tar zxvf $1 ;;
            *.bz2)      bunzip2 $1  ;;
            *.rar)      unrar e $1  ;;
            *.gz)       gunzip $1   ;;
            *.tar)      tar xf $1   ;;
            *.tbz2)     tar xjf $1  ;;
            *.tgz)      tar zxf $1  ;;
            *.zip)      unzip $1    ;;
            *.Z)        uncompress $1   ;;
            *.7z)       7z x $1     ;;
            *)  echo "'$1' cannot be extracted with extract"
    ;;
        esac
    else
        echo "'$1' is not a valid file"
    fi
}

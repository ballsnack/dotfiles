mkd() { mkdir -p "$@" && cd "$_" ; }

drm() { docker stop $1 && docker container rm $1 ; }

dip() {
    docker ps -a --format "{{.ID}}" | while read -r line ; do
        echo $line $(docker inspect --format "{{ .Name }} {{ .NetworkSettings.Networks.bridge.IPAddress }}" $line \
            | sed 's/\///'):$(docker port "$line"\
            | grep -o "0.0.0.0:.*"\
            | cut -f2 -d:)
    done
}

dbu() { docker build -t $1 . ; }

dex() { docker exec -u root -it $1 $2; }

randpw() {
    if [ "$#" -eq 0 ]; then
        len=8
    else
        len=$1
    fi

    < /dev/urandom tr -dc A-Za-z0-9 | head -c $len
    echo
}


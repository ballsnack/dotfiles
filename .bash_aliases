alias s='sudo'
alias please='s $(history -p \!\!)'
alias pls='please'

alias pac='s apt-get'
alias pacsearch='apt-cache search'
alias addrepo='s add-apt-repository'
alias remrepo='s add-apt-repository --remove'

alias ssh='sshrc'
alias sshx='ssh -X -C'

alias ..='cd ..'

alias minimize='xdotool windowminimize $(xdotool getactivewindow)'

alias screenfetch='screenfetch -A "Ubuntu-3color"'

alias vimswap='swap ~/.vimrc ~/.vimrc.alt'
